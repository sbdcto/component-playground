{
  "name": "next-template",
  "version": "0.1.1",
  "description": "This is my NextJS base template.",
  "author": "Save Ducto <ducto.save@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "check:knip": "knip --fix",
    "check:fix": "bun run ultracite fix",
    "check:all": "bun run check:knip && bun run check:fix",
    "prepare": "husky"
  },
  "packageManager": "bun@1.2.21",
  "engines": {
    "node": ">=22.14.0"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/postcss": "^4.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.542.0",
    "next": "15.5.2",
    "postcss": "^8.5.6",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-hook-form": "^7.62.0",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.8",
    "zod": "^4.1.5",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "autoprefixer": "^10.4.21",
    "husky": "^9.1.7",
    "knip": "^5.63.1",
    "lint-staged": "^16.1.6",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "ultracite": "5.3.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "bun run format",
      "bun run lint"
    ],
    "*.{json,md,css,scss}": [
      "bun run format"
    ],
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite format"
    ]
  },
  "trustedDependencies": [
    "@tailwindcss/oxide",
    "oxc-resolver"
  ]
}
